{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Changer de "bundler" à "node"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/**/*.ts", // Inclure tous les fichiers TypeScript dans src
    "src/**/*.d.ts", // Inclure les fichiers de déclaration
    "src/**/*.tsx", // Si vous utilisez JSX dans vos fichiers Vue
    "src/**/*.vue", // Ajouter les fichiers Vue
    "vite.config.ts"
  ]
}
